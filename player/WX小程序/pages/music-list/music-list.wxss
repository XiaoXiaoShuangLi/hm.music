/* 头部信息 */
.main {
    /*background-color: #f3f4f6;*/
}

.header {
    width: 100%;
    height: 8.5rem;
    display: flex;
    flex-direction: row;
    background-color: #31c37c;
}

.header > .left {
    margin-left: 1rem;
}

.header > .left > .image {
    width: 7rem;
    height: 7rem;
    margin: 0.5rem 0 0 0;
}

.header > .right {
    margin-right: 1rem;
    margin-left: 0.5rem;
}

.header > .right .text {
    color: #fff;
}

.header > .right .title {
    font-size: 0.85rem;
    line-height: 1.6rem;
    text-align: left;
    margin-top: 0.5rem;
    display: block;
    height: 4.5rem;
}

.header > .right > .author {
    display: flex;
    flex-direction: row;
}

.header > .right > .author > .portrait {
    width: 1.4rem;
    height: 1.4rem;
    border-radius: 50%;
    overflow: hidden;
}

.header > .right > .author > .name > .text {
    font-size: 0.55rem;
    line-height: 1.6rem;
    display: block;
    text-indent: 0.5rem;
}

.header > .right > .author > .portrait > .image {
    width: 1.6rem;
    height: 1.6rem;
}

/*列表信息*/

.list > .item {
    height: 3.5rem;
    display: flex;
    flex-direction: row;
}

.list > .item > .no {
    width: 3rem;
    color: #999a9b;
}

.list > .item > .no > .text {
    display: block;
    text-align: center;
    margin-top: 1.2rem;
}

.list > .item > .info {
    border-bottom: 1px solid #f3f3f3;
    flex: 1;
}

.list > .item > .info > .title {
    color: #333333;
    font-size: 0.75rem;
    line-height: 1.6rem;
    margin-left: 0.4rem;
    margin-top: 0.5rem;
}

.list > .item > .info > .author {
    color: #999a9b;
    font-size: 0.6rem;
    line-height: 0.6rem;
    margin-left: 0.4rem;
}